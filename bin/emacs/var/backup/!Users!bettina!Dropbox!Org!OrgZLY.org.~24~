*** macro test
**** copier coller la cellule de gauche si rien dans celle de droite

Sub SiVideCopieColleLaGauche()
    Dim I As Integer
    While Not IsEmpty(Cells(I, 1))
        If IsEmpty(Cells(I, 2)) Then
        Cells(I, 2).Value = Cells(I, 1).Value
        End If
    Wend
End Sub

*** Macros
**** Suppression colonnes inutiles

Sub SuppressionColonnesInutiles()
    Range("B:B,G:G,H:H,J:J").Select
    Selection.Delete Shift:=xlToLeft
End Sub

**** Suppression espaces dans les nombres

Sub SupprimerLesEspacesNombres()
    Range("E2").Select
    Range(Selection, Selection.End(xlDown)).Select
    Selection.Replace What:=" ", Replacement:="", LookAt:=xlPart, _
    SearchOrder:=xlByRows, MatchCase:=False
End Sub

**** Remplacer catégories triées

Sub RemplacerCategoriesTriees()
    Dim i As Integer
    i = 2
    While Not IsEmpty(Cells(i, 1))
        Cells(i, 7).Formula = "=VLOOKUP(RC[-4], Catégories!R1C1:R47C2,2,)"
        i = i + 1
    Wend

End Sub

**** Correction Catégories

Sub CorrectionCatégories()
    Dim i As Integer
    i = 2
    While Not IsEmpty(Cells(i, 2))
        Cells(i, 2).Select
        If InStr(1, Cells(i, 2).Value, "mint energie", vbTextCompare) > 0 Then
        Cells(i, 7).Value = "Energie"
        ElseIf InStr(1, Cells(i, 2).Value, "horiba", vbTextCompare) > 0 Then
        Cells(i, 7).Value = "Salaire Mehdi"
        ElseIf InStr(1, Cells(i, 2).Value, "Pignol", vbTextCompare) > 0 And Cells(i, 3).Value = "Virements émis" Then
        Cells(i, 7).Value = "Charges"
        ElseIf InStr(1, Cells(i, 2).Value, "Leboncoin", vbTextCompare) > 0 Then
        Cells(i, 7).Value = "LeBonCoin"
        ElseIf InStr(1, Cells(i, 2).Value, "au rythme du", vbTextCompare) > 0 Then
        Cells(i, 7).Value = "Alimentation"
        ElseIf InStr(1, Cells(i, 2).Value, "utwin", vbTextCompare) > 0 Then
        Cells(i, 7).Value = "Emprunt immobilier"
        ElseIf InStr(1, Cells(i, 2).Value, "indigo", vbTextCompare) > 0 Then
        Cells(i, 7).Value = "Parking"
        ElseIf InStr(1, Cells(i, 2).Value, "filhet-all", vbTextCompare) > 0 Then
        Cells(i, 7).Value = "Santé"
        ElseIf InStr(1, Cells(i, 2).Value, "TAM", vbBinaryCompare) > 0 Then
        Cells(i, 7).Value = "Parking"
        ElseIf InStr(1, Cells(i, 2).Value, "Bettina", vbTextCompare) > 0 And Cells(i, 3).Value = "Virements reçus" And Cells(i, 6).Value = "COMPTE COMMUN" And Cells(i, 5) > 0 Then
        Cells(i, 7).Value = "Virement Cpte Commun Bettina"
        End If
        i = i + 1
    Wend
End Sub

